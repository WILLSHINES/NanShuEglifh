/* main */
.main {
    width: 700rpx;
    height: 2000rpx;
    margin: 25rpx;
}

.maincontent {
    width: 100%;
    height: 55%;
    /* background-image: linear-gradient(135deg, #ff907e 1%,#ffc3ba52 20%,#ffffff 80%); */
    background-color: #ffffff;
    background-size: 100%;
    border-radius: 20rpx;
    margin-top: 50rpx;
    box-shadow: 0px 1px 4px 0px #e7edf8;
}

.wenan {
    width: 100%;
    height: 400rpx;
    background-color: #ffffff;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    overflow-y: scroll;
    padding-top: 20rpx;
    /* box-shadow: 0px 1px 4px 0px #8180a2; */
}

.indexwenan::-webkit-scrollbar {
    display: none
}
.wenantitle{
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.thistitle{
    width: 50%;
    height: 100%;
}
.timetitle{
    height: 100%;
    z-index: 1;
}


.title1{
    font-size: 50rpx;
    z-index: 99;
    color: rgba(238, 103, 14, 0.863);
    font-weight: bolder;
    margin-left: 70rpx;
    margin-top: 40rpx;
}
.titlebg{
    font-size: 100rpx;
    font-weight: bolder;
    color: #9191a44c;
    letter-spacing: 10rpx;
   left: 50rpx;
    position: absolute;
    bottom: 74%;
    z-index: 1;
}

.indexWenan {
    padding: 60rpx;
    padding-top: 80rpx;
    font-size: 30rpx;

    letter-spacing: 6rpx;
    line-height: 20rpx;
    color: #7a7c8a;
    text-align: left;
}

.allbuttons {
    width: 94%;
    height: 100%;
    margin: 40rpx auto;
padding-top: 40rpx;

}
.buttonview{
    background-color: #f5f7fb;
    border-radius: 25rpx;
    padding-top: 10rpx;
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
}
.viewfont{
    font-size: 40rpx;
    color: #8f8f8f;
}
.buttonview>.viewimage image{
    width: 150rpx;
    height: 150rpx;
}
.viewimage{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.buttonviewtxt{
    width: 60%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    color: #606060;
}
.buttonstar{
    display: flex;
    align-items: center;
    width: 100%;
}
.buttonstar1{
    background-color: #f1947f;
    width: 200rpx;
    height: 80rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 25rpx;
    margin-left: 40rpx;
}
.buttonstar>view>image{
    width: 80rpx;
    height: 80rpx;
}
.allbtn {
    display: flex;
    font-size: 30rpx;
    flex-direction: column;
    align-items: center;
}

.allbtn>image {
    width: 120rpx;
    height: 120rpx;
}

/* rememberwords */
.rememberwords {
    width: 100%;
    height: 200rpx;
    background-color: #f5f7fb;
    background-size: 150%;
    margin-top: 50rpx;
    border-radius: 25rpx;
    box-sizing: border-box;
    padding: 20rpx;
    border: 20rpx solid #ffffff;
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0px 1px 4px 0px #f2f6fe;
}


.remtext {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.remtextOne {
    font-size: 6vw;
    color: #3d3d55;
    letter-spacing: -2rpx;
}

.remtextTwo {
    font-size: 30rpx;
    color: #707070;
    letter-spacing: 20rpx;
}

.bgRound {
    width: 140rpx;
    height: 140rpx;
    background-color: #f9928287;
    border-radius: 100%;
    color: #ff7a3d;
    font-size: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0.8;
}

/* 评价和分享 */

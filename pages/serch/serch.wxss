/* pages/serch/serch.wxss */
page{
    background-color: #eff1f5;
}

.serch-view{
    width: 100%;
    height: 100rpx;
    margin-top: 180rpx;
}
.serchbg{
background-color: rgb(255, 255, 255) !important;
}
.serch-container-class{
    border: 1px solid #4E47FF !important;
    border-radius: 25rpx;
    width: 96% !important;
    height: 100rpx !important;
    margin: 20rpx auto; 
    animation-name: umymove;
    animation-duration: 0.5s;
    animation-timing-function: ease;

}
.showResult-view{
    width: 90%;
    height: 100%;
    padding: 3%;
    border: 1px solid #ffffff;
    border-radius: 25rpx;
    box-shadow: 0px 5px 5px 2px #f1f1f1;
    margin: 0 auto;
    margin-top: 30rpx;
    background-color: #ffffff;
   background-image: url("https://gitee.com/Yanhaibing-willshine/nanshu-english/raw/master/images/%E7%BC%BA%E7%9C%81%E9%A1%B5-%E8%83%8C%E6%99%AF.png");
   background-size: 100%;
   background-repeat: no-repeat;
   background-position: 0 260rpx;
}

.resultxt{
    height: 600rpx;
}

.frommean{
    font-size: 60rpx;
    color: #e54615;
    padding-top: 20rpx;
}

.tomean{
    font-size: 30rpx;
    color: #000000;
    padding-top: 0rpx;
}
.translatelogo{
    color: #7e47ff ;
    display: flex;
    align-items: center;
    border-bottom:1px solid #f1f1f1;
    padding-bottom: 20rpx;
}
.translatelogo>image{
    width: 34rpx;
    height: 34rpx;
}
.translatelogo>text{
    padding-left: 6rpx;
    font-size: 30rpx;
}
.motto{
    width: 100%;
    position: absolute;
    top: 96%;
    color: #474666;
    font-size: small;
    display: flex;
    justify-content: center;
}
.serchbbutton{
    position: absolute;
    width: 100rpx;
    height: 60rpx;
    background-color: #4E47FF;
}

.serch-container-class-it {
    border: 1px solid #4E47FF !important;
    border-radius: 25rpx;
    width: 96% !important;
    height: 100rpx !important;
    margin: 2% auto !important; 
    animation-name: mymove;
    animation-duration: 0.5s;
    animation-timing-function: ease;
}
@keyframes mymove {
    from { transform: translate(0,20rpx); opacity: 0;}
    /* 75% {transform: translate(0rpx,10rpx); opacity: 0.75;} */
    to{transform: translate(0rpx);opacity: 1;}
}
@keyframes umymove {
    from { transform: translate(0,0rpx); opacity: 0;}
    /* 75% {transform: translate(0,5rpx); opacity: 0.75;} */
    to{transform: translate(0,10rpx);opacity: 1;}
}
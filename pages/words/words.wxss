/* pages/grammer/grammer.wxss */
page{
    background-color: #eff1f5;
}
.main{
    width: 94%;
    margin: 3% auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.content_image>image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 25rpx;
}
.contentview{
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
    padding: 20rpx;
    border-radius: 35rpx;
    font-size: larger;
    width: 100%;
    margin-top: 20rpx;
}
.contenttxt{
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-between;
    height: 150rpx;
    width: 100%;
}